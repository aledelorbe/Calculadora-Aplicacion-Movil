<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:background="#2B2B2B">

        <TextView
            android:id="@+id/parteArriba"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:text="     "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/parteIzq"
            android:layout_width="3dp"
            android:layout_height="338dp"
            android:layout_alignParentLeft="true"
            android:background="@color/black"
            android:text="     "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/parteDer"
            android:layout_width="3dp"
            android:layout_height="338dp"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:text="     "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/parteAbajo"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:text="     "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtOperaciones"
            android:layout_width="400dp"
            android:layout_height="240dp"

            android:layout_below="@+id/parteArriba"
            android:gravity="right|bottom"
            android:paddingRight="12dp"
            android:textColor="#FFFF"
            android:textSize="72sp" />
        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="400dp"
            android:layout_height="75dp"
            android:layout_below="@+id/txtOperaciones"
            android:layout_centerInParent="true"
            android:gravity="right|bottom"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="#FFFF"
            android:textSize="62sp" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919"
        android:stretchColumns="*">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#232323"/>
        <TableRow>
            <Button
                android:id="@+id/btnMc"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="MC"
                android:textColor="#474747"
                android:textSize="10sp"
                app:backgroundTint="#101010" />
            <Button
                android:id="@+id/btnMr"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="MR"
                android:textColor="#474747"
                android:textSize="10sp"
                app:backgroundTint="#101010" />
            <Button                 android:id="@+id/btnMmas"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="M+"
                android:textColor="#474747"
                android:textSize="10sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnMmenos"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="M-"
                android:textColor="#474747"
                android:textSize="10sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnMs"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="MS"
                android:textColor="#474747"
                android:textSize="10sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnMalaMenos"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="M^-"
                android:textColor="#474747"
                android:textSize="10sp"
                app:backgroundTint="#101010" />
        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow android:background="#101010">
            <Button
                android:id="@+id/btnPorc"
                android:layout_width="62dp"


                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="%"
                android:textColor="#F2F2F2"
                android:textSize="17sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnCe"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="CE"
                android:textColor="#F2F2F2"
                android:textSize="17sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="C"
                android:textColor="#F2F2F2"
                android:textSize="17sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="DEL"
                android:textColor="#F2F2F2"
                android:textSize="17sp"
                app:backgroundTint="#101010" />
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#232323"/>

        <TableRow android:background="#101010">

            <Button
                android:id="@+id/btnInver"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="1/x"

                android:textColor="#F2F2F2"
                android:textSize="14sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnX2"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="X^2"
                android:textColor="#F2F2F2"
                android:textSize="14sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnSqrt"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="SQRT(X)"
                android:textColor="#F2F2F2"
                android:textSize="14sp"
                app:backgroundTint="#101010" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="/"
                android:textColor="#F2F2F2"
                android:textSize="17sp"
                app:backgroundTint="#101010" />
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#232323"/>

    </TableLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="311dp"
            android:layout_height="wrap_content"


            android:stretchColumns="*"
            android:id="@+id/tablaizq">

            <TableRow android:background="#050505">

                <Button
                    android:id="@+id/btnSiete"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="7"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />

                <Button
                    android:id="@+id/btnOcho"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="8"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />

                <Button
                    android:id="@+id/btnNueve"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="9"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#232323" />

            <TableRow android:background="#050505">

                <Button
                    android:id="@+id/btnCuatro"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="4"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />
                <Button
                    android:id="@+id/btnCinco"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="5"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />

                <Button
                    android:id="@+id/btnSeis"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="6"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#232323" />

            <TableRow
                android:layout_height="wrap_content"
                android:background="#050505">

                <Button
                    android:id="@+id/btnUno"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="1"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />

                <Button
                    android:id="@+id/btnDos"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="2"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />

                <Button

                    android:id="@+id/btnTres"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="3"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#232323" />

            <TableRow
                android:layout_height="120dp"
                android:background="#050505">

                <Button
                    android:id="@+id/btnMasMenos"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="+/-"
                    android:textColor="#F2F2F2"
                    android:textSize="17sp"
                    app:backgroundTint="#050505" />

                <Button
                    android:id="@+id/btnCero"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="0"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />

                <Button
                    android:id="@+id/btnPunto"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="."
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#050505" />
            </TableRow>

            <View
                android:layout_width="wrap_content"

                android:layout_height="1dp"
                android:background="#232323" />

        </TableLayout>

        <TableLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_toRightOf="@+id/tablaizq">

            <TableRow android:background="#101010">
                <Button
                    android:id="@+id/btnX"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="x"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#101010" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#232323" />

            <TableRow android:background="#101010">
                <Button
                    android:id="@+id/btnMenos"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="-"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#101010" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#232323" />

            <TableRow
                android:layout_height="wrap_content"
                android:background="#101010">
                <Button
                    android:id="@+id/btnMas"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"                     android:text="+"
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#101010" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#232323" />

            <TableRow
                android:layout_height="120dp"
                android:background="#143F62">
                <Button
                    android:id="@+id/btnIgual"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="="
                    android:textColor="#F2F2F2"
                    android:textSize="20sp"
                    app:backgroundTint="#143F62" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#232323" />

        </TableLayout>

    </RelativeLayout>

</LinearLayout>
